    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Env Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "EEG ZeroMQ Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/devices/eeg.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--input",
                "Audio", // debug
                "--mode",
                "decode",
                // "record",
            ],
        },
        {
            "name": "Pupil Websocket Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/devices/pupil.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONASYNCIODEBUG": "1"
            },
        },
        {
            "name": "Pupil Websocket Mock Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/devices/pupil_mock.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONASYNCIODEBUG": "1"
            },
        },
    ]
}